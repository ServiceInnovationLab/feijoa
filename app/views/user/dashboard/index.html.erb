<% if @organisations.any? %>
  <h2>Organisations</h2>
  <section class="c-dashboard-organisations">
    <div class="row">
      <% @organisations.each do |organisation| %>
        <div class="col-4">
          <%= link_to organisation_member_dashboard_path(organisation) do %>
            <div class="c-dashboard-organisations__org card">
              <div class="card-body">
                <%= organisation.name %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>
  <hr>
<% end %>
<section class="c-dashboard-links">
  <h2>Share</h2>
  <div class="row">
    <div class="col-4">
      <%= link_to user_requests_path do %>
        <div class="c-dashboard-links__link card">
          <div class="card-body">
            Requested shares
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-4">
      <%= link_to user_shares_path do %>
        <div class="c-dashboard-links__link card">
          <div class="card-body">
            My shares
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-4">
      <%= link_to user_birth_records_path do %>
        <div class="c-dashboard-links__link card">
          <div class="card-body">
            Documents
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
