<% if @requests.any? %>
  <h2>New share requests</h2>
  <% @requests.each do |request| %>
    <div class="mb-4">
      <%= render partial: 'user/requests/request', locals: { request: request } %>
    </div>
  <% end %>
<% end %>
<h2>Your documents dashboard</h2>
<p>This is where your documents are stored. Documents shown here can be for yourself, your whƒÅnau, or others. <strong>These are not proof of identity</strong> but are a legal representation of the data of your ID which is held within the New Zealand government.</p>
<div class="row">
  <div class="col">
    <%= render 'user/birth_records/modal_form' %>
  </div>
  <div class="col">
    <h3>Add an immunisation record</h3>
    <%= link_to new_user_immunisation_record_path, class: 'add-doc' do %>
      <%= image_tag("plus.svg", alt: 'Add a new document') %>
    <% end %>
  </div>
</div>
<% if @documents.any? %>
<div class="pt-4 pb-4">
  <hr>
</div>
  <section>
    <h2>Your documents</h2>
    <div class="index-cards">
      <% @documents.each do |document| %>
        <%= render partial: 'shared/documents/preview', locals: {
          document: document,
          actions: [
            link_to('View', user_document_path(document.document_type, document.id), class: 'btn btn-secondary'),
            render('user/shares/modal_form', document: document, classes: 'btn btn-primary')
          ]
        } %>
      <% end %>
    </div>
  </section>
<% end %>
