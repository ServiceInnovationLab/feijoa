<div class="card card--with-fancy-footer birth-record card--">
  <div class="card-body">
    <h5 class="card-title">Request for <%= t("documents.types.#{request.document_type}") %></h5>
    <h5 class="card-heading">
      <%= request.requester.name %> sent this request for a <%= t("documents.types.#{request.document_type}").downcase %> <%= time_ago_in_words(request.created_at) %> ago.
    </h5>
    <% if request.note %>
      <h5>
        <%= request.note %>
      </h5>
      <% end %>
  </div>

  <div class="card-footer">
    <div class="card-footer__inner d-flex flex-wrap justify-content-around">
      <% if request.can_decline? %>
        <%= form_with(url: decline_user_request_path(request), method: "post", local: true) do %>
          <%= submit_tag("Decline", class: 'btn btn-danger', data: { confirm: 'Are you sure you want to decline this request?' }) %>
        <% end %>
      <% end %>
      <%= link_to "View", user_request_path(request), class: 'btn btn-secondary' %>
      <% if request.can_respond? %>
        <a href="#" id="add-record" data-toggle="modal" data-target="#modalRequestResponseForm" class="btn btn-primary">
          Respond
        </a>
        <%= render partial: 'user/requests/response_modal', locals: { request: request } %>
      <% end %>
    </div>
  </div>
</div>
