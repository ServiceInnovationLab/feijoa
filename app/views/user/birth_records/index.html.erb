<section>
  <h2>Here are your documents</h2>
  <p>Documents shown here can be for yourself, your whƒÅnau, or others. <strong>These are not proof of identity.</strong></p>
  <%= render 'modal_form' %>

  <% if @birth_records.any? %>
    <div class="index-cards">

      <% @birth_records.each do |record| %>
        <div class="card birth-record" data-id="<%= record.to_param %>">
          <%= link_to user_birth_record_path(record) do %>
            <div class="card-header">
              <h4 class="card-title">BIRTH RECORD</h4>
            </div>
            <div class="card-body">
              <h5>
                <strong><%= record.family_name %></strong>,
                <%= record.first_and_middle_names %>
                <div class="text-muted"><%= record.place_of_birth %> <%= record.date_of_birth %></div>
              </h5>
            </div>
          <% end %>
          <div class="card-footer">
            <%= link_to 'share', new_user_share_path(share: { birth_record_id: record.to_param }), class: 'btn' %>
            <%= link_to 'remove', remove_user_birth_record_path(record), class: 'btn btn-danger', data: { confirm: 'Are you sure? This will the record from your documents'}, method: :post %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted font-italic">There are currently no birth records for <%= current_user.email %>.</p>
  <% end %>
</section>
