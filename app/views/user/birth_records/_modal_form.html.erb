<div class="modal fade" id="modalBirthRecordForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100">Enter birth record details</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-3">
        <%= render 'user/birth_records/form' %>
      </div>
    </div>
  </div>
</div>

<a href="#" id="add-record" data-toggle="modal" data-target="#modalBirthRecordForm" class="pt-4 pr-2">
  <h2>
    <%= image_tag("plus.svg", alt: 'Add a new document', class: 'add-doc') %>
    Search for a birth record
  </h2>
</a>
