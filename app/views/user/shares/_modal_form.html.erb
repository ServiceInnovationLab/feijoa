<div class="modal fade" id="modalSharesForm-<%= record.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100">Share</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-3">
        <%= render 'user/shares/form', record: record %>
      </div>
    </div>
  </div>
</div>

<a href="#" id="share-record-<%= record.id %>" data-toggle="modal" data-target="#modalSharesForm-<%= record.id %>" class="<%= classes %>">
  Share
</a>
