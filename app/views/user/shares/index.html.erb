<h1>Shared documents</h1>
<p class="lead">Documents you have shared.</p>
<% if @shares.blank? %>
  <p>You haven't yet shared any documents.</p>
  <%= link_to "Go back to your documents", user_birth_records_path %>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>Birth record</th>
        <th>User</th>
        <th>Recipient</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @shares.each do |share| %>
        <tr>
          <td><%= share.birth_record.short_name %></td>
          <td><%= share.user.email %></td>
          <td><%= share.recipient.display_name %></td>
          <td><%= link_to 'Show', user_share_path(share) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
