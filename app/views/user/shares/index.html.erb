<%= render partial: 'shared/back', locals: { path: user_dashboard_index_path } %>

<h1>Shared documents</h1>
<p class="lead">Documents you have shared.</p>
<% if @shares.blank? %>
  <p>You haven't yet shared any documents.</p>
  <%= link_to "Go back to your documents", user_dashboard_index_path %>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>Document type</th>
        <th>Document name</th>
        <th>User</th>
        <th>Recipient</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @shares.each do |share| %>
        <tr>
          <td><%= t("documents.types.#{share.document.document_type}") %></td>
          <td><%= share.document.heading %></td>
          <td><%= share.user.email %></td>
          <td><%= share.recipient.name %></td>
          <td><%= link_to 'Show', user_share_path(share) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
