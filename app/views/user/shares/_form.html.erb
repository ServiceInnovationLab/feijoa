<%= bootstrap_form_with(url: user_shares_path, layout: :vertical, scope: 'share', local: true,) do |f| %>
  <h4 class="font-weight-bold pb-2">Type name of organisation</h4>
  <%= f.hidden_field :document_id, value: document.id %>
  <%= f.hidden_field :document_type, value: document.document_type %>
  <%= f.hidden_field :recipient_id, id: 'recipient_id', value: nil %>
  <%= f.text_field :organisation, id: "org-query", label_as_placeholder: true, label: 'Organisation' %>
  <hr />
  <div class="row">
    <div class="col-12 font-weight-bold" id="org-name">  </div>
    <div class="col-12" id="org-email">  </div>
    <div class="col-12" id="org-address">  </div>
  </div>
  <div class="actions d-flex justify-content-center">
    <%= f.submit 'Share', id: 'share-button', class: "btn btn-primary single-view-btn" %>
  </div>
<% end %>
