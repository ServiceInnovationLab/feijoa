<h1>Shared documents</h1>
<p class="lead">Documents shared with you.</p>
<% if @shares.blank? %>
  <p>No documents have been shared with you.</p>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>Birth record</th>
        <th>User</th>
        <th>Recipient</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @shares.each do |share| %>
        <tr>
          <td><%= share.birth_record.short_name %></td>
          <td><%= share.user.email %></td>
          <td><%= share.recipient.email %></td>
          <td><%= link_to 'Show', organisation_user_share_path(share) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
