<div class="card" id="<%= "#{card.model_name.param_key}--#{card.primary_key_string}" %>">
  <div class="card-body">
    <h5 class="card-title">
      <%= link_to user_share_path(card) do %>
        <%= card.recipient %>
      <% end %>
    </h5>
    <%= render partial: 'shared/shares/summary', object: card %>
  </div>
</div>