<% if flash[:notice] %>
  <div class="alert alert-success alert-dismissible fade show">
    <%= sanitize flash[:notice].to_s %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close" type="button" data-close><span aria-hidden="true">&times;</span></button>
  </div>
<% end %>
<% if flash[:alert] %>
  <div class="alert alert-warning alert-dismissible fade show">
    <%= sanitize flash[:alert].to_s %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close" type="button" data-close><span aria-hidden="true">&times;</span></button>
  </div>
<% end %>
